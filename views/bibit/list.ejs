<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Daftar Bibit</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container mt-5">
    <h1 class="text-center mb-4">Daftar Bibit</h1>

    <!-- Tombol tambah bibit -->
      <a href="/bibit/add" class="btn btn-success">Tambah Bibit</a>
      <a href="pupuk" class="btn btn-primary">List Pupuk</a>
      <a href="/bibit-mysql" class="btn btn-info">Ke Database Bibit MySQL</a>
    

    <!-- Tabel daftar bibit -->
    <% if (bibit && bibit.length > 0) { %>
      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Nama</th>
            <th>Jenis</th>
            <th>Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% bibit.forEach(item => { %>
            <tr>
              <td><%= item.id %></td>
              <td><%= item.nama %></td>
              <td><%= item.jenis %></td>
              <td>
                <a href="/bibit/edit/<%= item.id %>" class="btn btn-warning btn-sm">Edit</a> 
                <a href="/bibit/delete/<%= item.id %>" onclick="return confirm('Apakah Anda yakin ingin menghapus bibit ini?')" class="btn btn-danger btn-sm">Hapus</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p class="text-center">Tidak ada data bibit.</p>
    <% } %>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
